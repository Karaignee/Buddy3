<%= form_for @message, :id => "contact", :url => contact_path do |form| %>
  <fieldset class="fields">
    <div class="field">
      <%= form.label :"Please enter your full name" %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :"email address" %>
      <%= form.text_field :email %>
    </div>
    <div class="field">
      <%= form.label :subject %>
      <%= form.text_field :subject %>
    </div>

    <div class="field">
      <%= form.label :"Talk to us" %>
      <%= form.text_area :body %>
    </div>
  </fieldset>

  <fieldset class="actions">
    <%= form.submit "Send" %>
  </fieldset>
<% end %>